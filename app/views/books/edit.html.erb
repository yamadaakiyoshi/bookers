<h2> Editing Book</h2>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title, class: "book_title"%>

    <h4>Body</h4>
    <%= f.text_area :body, class: "book_body"%>

    <%= f.submit 'Update Book' %>



<% end %>

 <%= link_to "Show",book_path(@book.id), class: "show_#{@book.id}"%> |
 <%=link_to "Back", new_book_path, class: "back"%>
